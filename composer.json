{
    "name": "scandio/lmvc-modules",
    "type": "library",
    "description": "LMVC-Modules are easy-to-use extensions to the 'scandio/lmvc'-framework",
    "keywords": ["php", "library", "mvc", "scandio", "lmvc"],
    "homepage": "https://github.com/scandio/lmvc-modules",
    "license": "MIT",
    "minimum-stability": "stable",

    "authors": [
        {
            "name": "Scandio GmbH",
            "homepage": "http://www.scandio.de/"
        }
    ],

    "require": {
        "php": ">=5.4",
        "scandio/lmvc":"^0.4.0",
        "leafo/lessphp": "^0.3.9",
        "mustache/mustache": "^2.1.0",
        "leafo/scssphp": "^0.0.7",
        "nitra/php-min": "^0.0.5",
        "intervention/image": "^2.3.5",
        "coffeescript/coffeescript": "^1.3.1",
        "picas/markdown-extended": "dev-master",
        "scandio/troba": "^0.5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "Scandio\\lmvc\\modules": "lib/"
        }
    }
}
